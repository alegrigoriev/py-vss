# EditorConfig is awesome: https://EditorConfig.org

# default-style newlines with a newline ending every file
[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = tab
indent_size = 4

[*.pyproj]
indent_style = space
indent_size = 2
insert_final_newline = false
